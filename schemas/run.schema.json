{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/nbardy/oompa_loompas/schemas/run.schema.json",
  "title": "OompaRunLog",
  "description": "Run log written at swarm start. File: runs/{swarm-id}/run.json",
  "type": "object",
  "required": ["swarm-id", "started-at", "config-file", "workers"],
  "properties": {
    "swarm-id": {
      "type": "string",
      "description": "Unique identifier for this swarm run"
    },
    "started-at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 instant when the swarm started"
    },
    "config-file": {
      "type": "string",
      "description": "Path to the oompa.json config file used"
    },
    "workers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "harness", "model", "iterations", "can-plan", "prompts"],
        "properties": {
          "id": { "type": "string" },
          "harness": { "type": "string", "enum": ["codex", "claude", "opencode", "gemini"] },
          "model": { "type": "string" },
          "reasoning": { "type": ["string", "null"] },
          "iterations": { "type": "integer", "minimum": 1 },
          "can-plan": { "type": "boolean" },
          "prompts": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "planner": {
      "type": ["object", "null"],
      "description": "Planner config, null when no planner is configured",
      "properties": {
        "harness": { "type": "string", "enum": ["codex", "claude", "opencode", "gemini"] },
        "model": { "type": "string" },
        "prompts": { "type": "array", "items": { "type": "string" } },
        "max-pending": { "type": "integer", "minimum": 1 }
      },
      "required": ["harness", "model", "prompts", "max-pending"]
    },
    "reviewer": {
      "type": ["object", "null"],
      "description": "Reviewer config, null when no reviewer is configured",
      "properties": {
        "harness": { "type": "string", "enum": ["codex", "claude", "opencode", "gemini"] },
        "model": { "type": "string" },
        "prompts": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["harness", "model", "prompts"]
    }
  },
  "additionalProperties": false
}
